<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValidateActivity"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center">
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/question" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#FF53C39A"
        android:textColorHint="#fff"
        android:text="Đây là ứng dụng demo mời nhập key để vào\n
        Liên hệ : gmail: 2kchanh@gmail.com \n
        Hoặc zalo: 0978982062"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_input_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:drawablePadding="15dp"
        android:hint="nhập khóa..."
        android:drawableLeft="@drawable/ic_baseline_key_24"
        android:maxLength="15"
        android:maxLines="1"
        android:textColor="#FF53C39A"
        android:textColorHint="#fff"
        android:textSize="20sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_start"
        android:text="Bắt đầu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>