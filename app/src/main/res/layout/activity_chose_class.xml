<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.luuvipham.ChooseClassActivity">

    <Button
        android:id="@+id/btn_back_choose_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="@color/button"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
        android:text="Quay lại"
        android:textSize="@dimen/text_size_default_min"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khối:"
            android:textColor="@android:color/holo_red_light"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:textStyle="bold" />
        <Spinner
            android:background="@drawable/style_spinner"
            android:id="@+id/spn_choose_khoi"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:dropDownVerticalOffset="40dp" />
    </LinearLayout>
    <ListView
        android:id="@+id/lv_choose_class_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="8.0sp"
        android:backgroundTint="@color/button" />
</LinearLayout>